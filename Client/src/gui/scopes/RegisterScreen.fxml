                                <Label layoutX="311.0" layoutY="61.0" text="Name" textFill="#3a3a3a" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</GridPane>
